bin/intrusion_detection: test/intrusion_detection.cpp
	g++ $(CFLAGS) $^ -o $@ -lhoover -Lbin $(SHMEM_FLAGS)

bin/hvr_dist_bitvec_test: test/hvr_dist_bitvec_test.c
	g++ $(CFLAGS) $^ -o $@ -lhoover -Lbin $(SHMEM_FLAGS)

bin/interact_test: test/interact_test.c
